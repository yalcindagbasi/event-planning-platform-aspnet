@model SmartEventPlanningPlatform.Controllers.AdminViewModel

@{
    ViewData["Title"] = "Admin Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Admin Paneli</h1>

    <div class="row">
        <!-- Sol Sütun: Kullanıcılar -->
        <div class="col-md-6">
            <h2>Kullanıcılar</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Kullanıcı Adı</th>
                        <th>Email</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>
                                <form method="post" action="@Url.Action("DeleteUser", "Admin", new { userId = user.UserId })" onsubmit="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Sağ Sütun: Etkinlikler -->
        <div class="col-md-6">
            <h2>Etkinlikler</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Etkinlik Adı</th>
                        <th>Başlangıç Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var eventItem in Model.Events)
                    {
                        <tr>
                            <td>@eventItem.Title</td>
                            <td>@eventItem.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <form method="post" action="@Url.Action("DeleteEvent", "Admin", new { eventId = eventItem.EventId })" onsubmit="return confirm('Bu etkinliği silmek istediğinize emin misiniz?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
