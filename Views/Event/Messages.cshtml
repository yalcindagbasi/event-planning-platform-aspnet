@model int 
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartEventPlanningPlatform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .chat-window {
            height: 400px;
            overflow-y: scroll;
            border: 1px solid #ccc;
            padding: 10px;
            background-color: #f9f9f9;
        }

        .message {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

            .message img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                margin-right: 10px;
                object-fit: cover; 
            }

        .message-content {
            background-color: #fff;
            padding: 10px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .message-time {
            font-size: 0.8em;
            color: #888;
            margin-left: auto;
        }
    </style>
</head>
@section Scripts {
    <script>
        function loadMessages() {
            $.get(`/api/Message/GetMessagesByEvent/${@Model}`, function (data) {
                let chatWindow = $('#chatWindow');
                chatWindow.empty();
                data.forEach(message => {
                    chatWindow.append(`
                        <div class="message">
                            <img src="${message.senderProfilePictureUrl}" alt="${message.senderName}">
                            <div class="message-content">
                                <strong>${message.senderName}:</strong> ${message.content}
                                <div class="message-time">${new Date(message.sentAt).toLocaleString()}</div>
                            </div>
                        </div>
                    `);
                });
            });
        }

        function sendMessage() {
            const content = $('#messageContent').val();
            $.ajax({
                url: '/api/Message/SendMessage',
                type: 'POST',
                contentType: 'application/json', 
                data: JSON.stringify({ EventId: @Model, Content: content }), 
                success: function () {
                    $('#messageContent').val('');
                    loadMessages();
                },
                error: function (xhr, status, error) {
                    console.error('Mesaj gönderilemedi:', xhr.responseText || error);
                }
            });
        }
        $(document).ready(function () {
            loadMessages(); 
            setInterval(loadMessages, 5000); 
        });

    </script>
}

<div class="container">
    <div class="chat-window" id="chatWindow">
    </div>

    <textarea id="messageContent" class="form-control" placeholder="Type your message"></textarea>
    <button class="btn btn-primary mt-2" onclick="sendMessage()">Send</button>
</div>
